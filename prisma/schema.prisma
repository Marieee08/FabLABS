// For all clients

model CitizenSatisfaction {
  id          Int      @id @default(autoincrement())
  Sex         String?
  Age         Int?
  CC1         Int?
  CC2         Int?
  CC3         Int?
  CC4         Int?
  CC5         Int?
  SQD0        Int?
  SQD1        Int?
  SQD2        Int?
  SQD3        Int?
  SQD4        Int?
  SQD5        Int?
  SQD6        Int?
  SQD7        Int?
